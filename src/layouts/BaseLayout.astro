---
import Navbar from "../components/navigation/Navbar.astro";
import '../styles/custom.css';

interface Props {
	title: string
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon/favicon.ico">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
		<link rel="canonical" href="https://coastalleaf.co/">
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content="Coastal Leaf Designs">
		<meta name="description" content="Coastal Leaf Designs offers custom website design and development services for small business owners.">
		<meta name="keywords" content="web dev, web design, etc">
		<meta property="og:title" content="Coastal Leaf Designs">
		<meta property="og:description" content="Coastal Leaf Designs offers custom website design and development services for small business owners.">
		<meta property="og:image" content="">
		<meta property="og:url" content="https://coastalleaf.co/">
		<meta property="og:type" content="website">
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content="Coastal Leaf Designs">
		<meta name="twitter:description" content="Coastal Leaf Designs offers custom website design and development services for small business owners.">
		<meta name="twitter:image" content="">
		<title>{title}</title>
	</head>
	<body>
	  <Navbar />
		<slot />
	</body>
</html>
